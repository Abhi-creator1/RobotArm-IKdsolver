<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="asrs_robot">

    <!-- Properties -->
    <xacro:property name="PI" value="3.14159265359" />

    <!-- Material Definitions -->
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>

    <!-- Links -->
    <link name="world"/>

    <link name="base_link">
        <inertial>
            <mass value="5.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.1"/>
                 
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.2" radius="0.1"/>
                 
            </geometry>
        </collision>
    </link>

    <link name="shoulder_link">
        <inertial>
            <mass value="3.0"/>
            <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.3 0.05 0.05"/>
                 
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.3 0.05 0.05"/>
                 
            </geometry>
        </collision>
    </link>

    <link name="elbow_link">
        <inertial>
            <mass value="2.0"/>
            <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.2 0.05 0.05"/>
                 
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.05 0.05"/>
                 
            </geometry>
        </collision>
    </link>

    <link name="wrist1_link">
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.025"/>
                 
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.1" radius="0.025"/>
                 
            </geometry>
        </collision>
    </link>

    <link name="tcp_link">
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
        </inertial>
        <visual>
            <geometry>
                <sphere radius="0.025"/>
                
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.025"/>
            
            </geometry>
        </collision>
    </link>

    <!-- Joints -->
    <joint name="world_to_baselink" type="revolute">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${PI}" upper="${PI}" effort="50.0" velocity="1.0"/>
    </joint>

    <joint name="base_to_shoulder" type="revolute">
        <parent link="base_link"/>
        <child link="shoulder_link"/>
        <origin xyz="0 0 0.14415" rpy="${PI/2} 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="0" upper="${PI}" effort="30.0" velocity="1.0"/>
    </joint>

    <joint name="shoulder_to_elbow" type="revolute">
        <parent link="shoulder_link"/>
        <child link="elbow_link"/>
        <origin xyz="0.24381 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${3*PI/4}" upper="0" effort="30.0" velocity="1.0"/>
    </joint>

    <joint name="elbow_to_wrist1" type="revolute">
        <parent link="elbow_link"/>
        <child link="wrist1_link"/>
        <origin xyz="0.12475 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="20.0" velocity="1.0"/>
    </joint>

    <joint name="wrist1_to_tcp" type="fixed">
        <parent link="wrist1_link"/>
        <child link="tcp_link"/>
        <origin xyz="0.08475 0 0" rpy="-${PI/2} 0 0"/>
    </joint>

</robot>
